@import url('https://fonts.googleapis.com/css2?family=Assistant:wght@400;600;700&display=swap')

:root
  direction rtl

html, body
  padding 0

body
  font-family: 'Assistant', sans-serif;
  font-size 16px
  margin 1em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25

h1
  color: #231F20

h2
  font-weight 700

h3
  color: #2771b3

a
  color: #005a61

p, ul, ol
  line-height 1.7

p
  white-space pre-line

p > small:only-child
    display block
    line-height 1.5
